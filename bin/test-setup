#!/bin/bash
set -e

function finish() {
  echo "Cleaning up"
  rm -rf /tmp/test_output
  exit 0
}

trap finish SIGINT

main() {
  cd /tmp
  rm -rf test_output
  mkfifo test_output
  while true
  do
    if read line < test_output
    then
      clear
      (eval $line) || true
    fi
  done
  echo "hi"
}

main
