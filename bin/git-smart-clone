#!/usr/bin/env ruby

require 'uri'

input = ARGV.first
rest = ARGV[1..-1].join(" ")

if input.match(URI.regexp)
  system("git clone #{input} #{rest}")
else
  matches = input.match(/(?<user>.*)\/(?<repo>.*)/)
  system("git clone https://github.com/#{matches[:user]}/#{matches[:repo]}.git #{rest}")
end

