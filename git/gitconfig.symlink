[user]
  name = David Pedersen
[color]
  diff = auto
  status = auto
  branch = auto
  ui = true
[credential]
  helper = osxkeychain
[status]
  submodule = 1
[alias]
  l = log --graph --pretty=format':%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset'
  count = shortlog -sn
  amend = commit --amend
  unstage = reset HEAD
[push]
  default = simple
[merge]
  tool = vimdiff
[core]
  pager = "less -F -X"
  excludesfile = /Users/davidpdrsn/.gitignore

[include]
  path = ~/.gitconfig.local
