# Shortcuts
alias bin='cd ~/dotfiles/bin'
alias dot='cd ~/dotfiles'
alias dt='cd ~/desktop'
alias code='cd ~/code'
alias pro='cd ~/projects'
alias cabana='cd ~/work/cabana'
alias hax='cd ~/hax'
alias dtl='dt && l'

alias u='cd ~/uni && l'
alias oo='cd ~/uni/oopd && l'
alias lin='cd ~/uni/linalgdat && l'

alias v='vim'

# Edit config files
alias ea='vim ~/dotfiles/zsh/aliases'
alias ef='vim ~/dotfiles/zsh/functions'
alias ee='vim ~/dotfiles/zsh/env'
alias ep='vim ~/dotfiles/zsh/prompt'

# Git aliases
alias s='git status -sb' # short status with branch information
alias ga='git add' # add
alias gaa='git add --all' # add changes from all tracked an untracked files
alias gap='git add -p' # add patch style
alias gc='git commit' # commit
alias gcm='git commit -m' # commit with message
alias glog='git log --date-order --pretty="format:%C(yellow)%h%Cblue%d%Creset %s %C(white) %an, %ar%Creset"' # pretty graph
alias gl='glog --graph' # graph showing branch paths and merges
alias gd='git diff' # diff what has changed but not been staged
alias gdc='git diff --staged' # diff of whats been staged
alias gb='git branch' # branch
alias gco='git checkout' # checkout
alias gcob='git checkout -b' # make new branch and check it out
alias gp='git push' # push
alias gpu='git push' # push
alias gpll='git pull' # pull
alias gignore='cp ~/bin/dotfiles/git/gitignore .gitignore' # copy over default gitignore
alias gsa="git submodule add" # add submodule
alias gm="git merge" # merge

# Utility
alias reload='source ~/.zshrc'
alias realod='source ~/.zshrc'
alias build='ruby build.rb'
alias buidl='ruby build.rb'

# Common
alias c='clear'
alias cdd='cd -'  # goto last dir cd'ed from
alias cl='clear; l'
alias cls='clear; ls'
alias h='history'
alias l.='ls -d .[^.]*'
alias l='ls -lhGt'  # -l long listing, most recent first, -G color
alias la='ls -lhGta'
alias lh="ls -lh"
alias ll='ls -lhG'  # -l long listing, human readable, no group info
alias lt='ls -lt' # sort with recently modified first
alias md='mkdir -p'
alias ..='cd ..'   # up one dir
alias mosml='rlwrap mosml -P full'
alias rakes='rake --tasks'
alias rmd='rm -rf'
alias cask='brew cask'
alias ccat='highlight -O ansi'

# PostgreSQL
alias dblist='psql -l'

# Finder
alias o='open . &'

# Processes
alias cpu='top -o cpu' # cpu
alias memo='top -o vsize' # memory

# Flush DNS cache
alias flushdns="dscacheutil -flushcache"

# Don't autocorrect on these commands
alias bundle='nocorrect bundle'
alias rspec='nocorrect rspec'
alias jsc='nocorrect jsc'
alias ijs='nocorrect jsc'

# Rails
alias z='bin/zeus'
