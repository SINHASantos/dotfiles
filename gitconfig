[alias]
  # shortcuts
  s = status -sb
  h = !git head
  hp = "!. ~/.githelpers && show_git_head"
  r = !git l -30
  ra = !git r --all
  l = "!. ~/.githelpers && pretty_git_log"
  la = !git l --all
  a = add
  aa = add --all
  c = commit
  cm = commit -m
  d = diff
  dc = diff --cached
  b = branch
  co = checkout
  cob = checkout -b
  bco = checkout -b
  p = push --ff-only
  pll = pull --ff-only
  m = merge

  # new "commands"
  count = shortlog -sn
  amend = commit --amend
  unstage = reset HEAD
  rank = !git-rank
  sclone = !git-smart-clone
[push]
  default = simple
[merge]
  tool = vimdiff
